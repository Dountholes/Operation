<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/style_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/style_rl_pv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="57dp"
            android:visibility="invisible"
            android:text="预览"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
           />
        <Button
            android:id="@+id/style_rl_ap"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="123dp"
            android:visibility="invisible"
            android:text="应用"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_et_pv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="57dp"
            android:visibility="invisible"
            android:text="预览"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_et_ap"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="123dp"
            android:visibility="invisible"
            android:text="应用"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_rm_pv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="590dp"
            android:layout_marginTop="57dp"
            android:visibility="invisible"
            android:text="预览"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_rm_ap"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="590dp"
            android:layout_marginTop="123dp"
            android:visibility="invisible"
            android:text="应用"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_ng_pv"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="850dp"
            android:layout_marginTop="57dp"
            android:visibility="invisible"
            android:text="预览"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
        <Button
            android:id="@+id/style_ng_ap"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="850dp"
            android:layout_marginTop="123dp"
            android:visibility="invisible"
            android:text="应用"
            android:textSize="35sp"
            android:background="@drawable/style_bt_shp"
            />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="5"
        android:rowCount="1" >
        <com.example.operation.activity.setting.RoundCornerImageView
            android:id="@+id/style_rl_img"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:src="@drawable/style_relax"
            />
        <com.example.operation.activity.setting.RoundCornerImageView
            android:id="@+id/style_et_img"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:src="@drawable/style_excite"
           />
        <com.example.operation.activity.setting.RoundCornerImageView
            android:id="@+id/style_rm_img"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:src="@drawable/style_romantic"/>

        <com.example.operation.activity.setting.RoundCornerImageView
            android:id="@+id/style_ng_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
             android:elevation="2dp"
            android:src="@drawable/style_night" />
        <com.example.operation.activity.setting.RoundCornerImageView
            android:id="@+id/style_ps_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:src="@drawable/style_personal"/>
    </GridLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:elevation="2dp"
            android:text="休闲模式"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:elevation="2dp"
            android:text="动感模式"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:elevation="2dp"
            android:text="浪漫模式"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:elevation="2dp"
            android:text="夜间模式"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:elevation="2dp"
            android:text="自定义模式"
            android:textSize="40sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>